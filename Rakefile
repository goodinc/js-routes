require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "jsroutes"
    gemspec.summary = "Exposes Rails' routes to JavaScript"
    gemspec.description = ""
    gemspec.email = "marcel@northdocks.com"
    gemspec.homepage = "http://github.com/sirlantis/jsroutes"
    gemspec.authors = ["Marcel Jackwerth"]
    gemspec.add_dependency('jsmin', '>= 1.0.1')
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install jeweler"
end